<Imprint xmlns:Imprint="Render://approach.local">
    <Imprint:Pattern name="Issueform" type="HTML">
        <div class="TabsForm Interface">
            <div class="TabBar">
                <div class="tabBtn" tab-activate="1">Requirements<i class="bi bi-arrow-right"></i></div>
                <div class="tabBtn" tab-activate="2">Survey<i class="bi bi-arrow-right"></i></div>
                <div class="tabBtn" tab-activate="3">Review<i class="bi bi-arrow-right"></i></div>
                <div class="tabBtn" tab-activate="4">Work<i class="bi bi-arrow-right"></i></div>
                <div class="tabBtn" tab-activate="5">Describe<i class="bi bi-arrow-right"></i></div>
                <div class="tabBtn" tab-activate="6">Adapt<i class="bi bi-arrow-right"></i></div>
            </div>
            <main class="Interface InterfaceContent">
                <div class="tab tab1 active">
                    <h4>1. Decide a Goal </h4>
                    <p>
                        Decide a suitable goal.
                    </p>
                    <form class="Autoform" data-action="Climb">
                        <div class="normal-input-container">
                            <label for="title">Goal</label>
                            [@ Title @]
                        </div>
                        <div class="normal-input-container">
                            <label for="parent_id">Parent ID</label>
                            [@ Parent @]
                        </div>
                        <div class="inputs input-container" id="requirements">
                            [@ Requirements @]
                            <button type="button" class="add btn btn-primary">
                                Add
                            </button>
                        </div>
                    </form>
                </div>
                <div class="tab tab2">
                    <h4>2. Survey the Environment</h4>
                    <p>
                        Describe the environment.
                    </p>
                    <form class="Autoform" data-action="Survey">
                        <div>
                            <p> Interests </p>
                            <div class="inputs input-container" id="survey">
                                [@ Survey @]
                                <button type="button" class="add btn btn-primary">
                                    Add
                                </button>
                            </div>
                        </div>
                        <div>
                            <p> Obstacles </p>
                            <div class="inputs input-container" id="obstacles">
                                [@ Obstacles @]
                                <button type="button" class="add btn btn-primary">
                                    Add
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab tab3">
                    <h4>3. Review the Environment</h4>
                    <p>
                        Describe the environment.
                    </p>
                    <form class="Autoform" data-action="Review">
                        <p> Review Findings </p>
                        <div class="review_inputs input-container" id="review">
                            [@ Review @]
                            <button type="button" class="add btn btn-primary">
                                Add
                            </button>
                        </div>
                    </form>
                </div>
                <div class="tab tab4">
                    <h4>4. Work on the Goal</h4>
                    <p>
                        Start work and document
                    </p>
                    <form class="Autoform" data-action="Work">
                        [@ Progress @]
                    </form>
                </div>
                <div class="tab tab5">
                    <h4>5. Describe your work</h4>
                    <form class="Autoform" data-action="Describe">
                        <label class="form-label">Budget: Expectations vs Reality</label>
                        <select class="form-select" name="budget_res">Choose an option
                            <option value="1">Budget Met Expectations</option>
                            <option value="2">Budget Exceeded Expectations</option>
                            <option value="3">Low Budget</option>
                        </select>
                        <p>Points of Interest for new Destinations</p>
                        <div class="inputs input-container" id="interestsd">
                            [@ InterestsD @]
                            <button type="button" class="add btn btn-primary">
                                Add
                            </button>
                        </div>
                        <p>Points of Concern and Hazards</p>
                        <div class="inputs input-container" id="hazards">
                            [@ Hazards @]
                            <button type="button" class="add btn btn-primary">
                                Add
                            </button>
                        </div>
                    </form>
                </div>
                <div class="tab tab6">
                    <h4>6. Adapt from Finding</h4>
                    [@ Adapt @]
                </div>
                <div>
                    [@ Update @]
                </div>
            </main>
        </div>
    </Imprint:Pattern>
</Imprint>

